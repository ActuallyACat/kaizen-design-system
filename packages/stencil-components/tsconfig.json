{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "lib": ["es2018", "dom"],
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2017",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "experimentalDecorators": true,
    "jsx": "preserve",
    "jsxFactory": "h",
    "skipLibCheck": true,
    "noEmit": false
  },
  "include": ["src"],
  "exclude": ["node_modules", "loader", "dist", "components"]
}
