{
  "name": "@kaizen/a11y",
  "version": "1.0.0",
  "description": "A collection of components for easily making things more accessible.",
  "scripts": {
    "prepublish": "tsc --project tsconfig.dist.json",
    "build": "yarn clean && yarn prepublish",
    "build:watch": "yarn clean && yarn prepublish --watch",
    "clean": "rimraf '**/*.d.ts' '**/*.js' '**/*.map'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cultureamp/kaizen-design-system.git",
    "directory": "packages/a11y"
  },
  "bugs": {
    "url": "https://github.com/cultureamp/kaizen-design-system/issues"
  },
  "files": [
    "**/*",
    "!**/*.ts",
    "!**/*.tsx",
    "**/*.d.ts",
    "!**/*.spec.*",
    "!**/*.snap",
    "!draft-templates",
    "!stories",
    "!docs",
    "!tsconfig.dist.json"
  ],
  "author": "",
  "private": false,
  "license": "MIT",
  "dependencies": {
    "react-focus-rings": "^1.0.3"
  },
  "devDependencies": {
    "@kaizen/design-tokens": "^2.8.3",
    "rimraf": "^3.0.2"
  },
  "peerDependencies": {
    "@kaizen/design-tokens": "^2.8.3",
    "react": "^16.9.0"
  }
}
